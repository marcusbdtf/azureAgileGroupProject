            <!-- Decides position of ul -->
            <div class="col text-md-center">
                <h5 class="@textColor text-decoration-none">Kontakta Oss</h5>
                <ul class="list-unstyled">
                    <li>Mail: email@EmailAddress.com</li>
                    <li>Telefon: 031-333-444</li>
                    <li>Adress: Kvilletorget</li>
                </ul>
            </div>
            <!-- Decides position of ul -->
            <div class="col text-md-center">
                <h5 class="@textColor">Betalmedel</h5>
                <ul class="list-unstyled">
                    <img src="https://teamkvillestorage.blob.core.windows.net/additionals/logo-stripe.png" style="width: 75%" />
