@code {
    // color settings
    string backgroundColor = "bg-light";
    string textColor = "#212529";
    [Inject] IJSRuntime JSRuntime { get; set; }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("scrollToTop");
    }
}